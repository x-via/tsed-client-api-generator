{
  "name": "tsed-client-api-generator",
  "version": "0.0.1",
  "description": "Automatically generates Typescript APIs from Ts.ED controllers",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.json && npx cpx \"templates/*.ejs\" ./lib/templates",
    "test": "jest --coverage",
    "release": "npm run build && npx semantic-release"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "ejs": "^3.1.6"
  },
  "private": false,
  "devDependencies": {
    "@tsed/common": "^6.71.1",
    "@tsed/schema": "^6.71.1",
    "@types/ejs": "^3.0.5",
    "@types/jest": "^26.0.19",
    "coveralls": "^3.1.0",
    "cpx": "^1.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.7",
    "prettier": "^2.4.1",
    "semantic-release": "^17.3.0",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@tsed/common": "^6.x.x",
    "@tsed/schema": "^6.x.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,ts}": "prettier --write"
  },
  "files": [
    "/lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/x-via/tsed-client-api-generator.git"
  }
}
